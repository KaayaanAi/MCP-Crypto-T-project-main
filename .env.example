# ======================================================================
# MCP CRYPTO TRADING SERVER - PRODUCTION ENVIRONMENT CONFIGURATION
# ======================================================================
# SECURITY WARNING: This file contains template values for environment variables.
# Copy this file to .env and replace ALL placeholder values with secure credentials.
# NEVER commit the actual .env file with real credentials to version control.
# Last Updated: 2025-09-21 - Security hardened

# ======================================================================
# APPLICATION ENVIRONMENT
# ======================================================================
APP_VERSION=2.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# MCP Protocol Configuration
MCP_PROTOCOL_VERSION=2024-11-05
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000

# ======================================================================
# CRITICAL: DATABASE CREDENTIALS - REQUIRED FOR ALL DEPLOYMENTS
# ======================================================================
# SECURITY: Generate strong passwords using: openssl rand -base64 32
# Use different passwords for each database in production

# MongoDB Configuration (Required)
MONGO_INITDB_ROOT_USERNAME=mcp_crypto_admin
MONGO_INITDB_ROOT_PASSWORD=REPLACE_WITH_SECURE_MONGODB_PASSWORD_32_CHARS_MIN
MONGO_INITDB_DATABASE=crypto_trading
MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongodb:27017/crypto_trading

# PostgreSQL Configuration (Required)
POSTGRES_USER=mcp_crypto_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_POSTGRESQL_PASSWORD_32_CHARS_MIN
POSTGRES_DB=crypto_trading
POSTGRES_DSN=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgresql:5432/crypto_trading

# Redis Configuration (Required)
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD_32_CHARS_MIN
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ======================================================================
# EXTERNAL APIS & INTEGRATIONS
# ======================================================================
# SECURITY: Never hardcode API keys. Use secure vault solutions in production.

# WhatsApp API (Optional)
WHATSAPP_API=https://api.whatsapp.business.com
WHATSAPP_SESSION=REPLACE_WITH_WHATSAPP_SESSION_TOKEN
WHATSAPP_PHONE_NUMBER_ID=REPLACE_WITH_PHONE_NUMBER_ID
WHATSAPP_ACCESS_TOKEN=REPLACE_WITH_WHATSAPP_ACCESS_TOKEN

# Cryptocurrency Exchange APIs (Required for trading)
BINANCE_API_KEY=REPLACE_WITH_BINANCE_API_KEY
BINANCE_SECRET_KEY=REPLACE_WITH_BINANCE_SECRET_KEY
BINANCE_TESTNET=false
COINGECKO_API_KEY=REPLACE_WITH_COINGECKO_API_KEY
COINMARKETCAP_API_KEY=REPLACE_WITH_COINMARKETCAP_API_KEY

# Additional Exchange APIs (Optional)
KRAKEN_API_KEY=REPLACE_WITH_KRAKEN_API_KEY
KRAKEN_SECRET_KEY=REPLACE_WITH_KRAKEN_SECRET_KEY
COINBASE_API_KEY=REPLACE_WITH_COINBASE_API_KEY
COINBASE_SECRET_KEY=REPLACE_WITH_COINBASE_SECRET_KEY

# ======================================================================
# MONITORING & OBSERVABILITY
# ======================================================================
# SECURITY: Use strong passwords for monitoring dashboards
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_GRAFANA_PASSWORD_16_CHARS_MIN
GRAFANA_ADMIN_USER=admin
ENABLE_METRICS=true
METRICS_PORT=8080
METRICS_PATH=/metrics

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_STORAGE_PATH=/prometheus

# Elasticsearch & Kibana (Optional)
ELASTIC_PASSWORD=REPLACE_WITH_ELASTIC_PASSWORD_16_CHARS_MIN
KIBANA_ENCRYPTION_KEY=REPLACE_WITH_KIBANA_32_CHAR_ENCRYPTION_KEY

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ======================================================================
# TRADING CONFIGURATION
# ======================================================================
DEFAULT_RISK_PERCENTAGE=2.0
MAX_POSITION_SIZE_PERCENTAGE=10.0
MAX_CONCURRENT_REQUESTS=200
CACHE_TTL_SECONDS=300

# ======================================================================
# CRITICAL: SECURITY SETTINGS - GENERATE UNIQUE VALUES
# ======================================================================
# SECURITY: Generate these with: openssl rand -hex 32
# Use different keys for each environment (dev/staging/prod)

# JWT Authentication (Required)
JWT_SECRET=REPLACE_WITH_64_CHARACTER_HEX_JWT_SECRET
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Encryption Keys (Required)
ENCRYPTION_KEY=REPLACE_WITH_64_CHARACTER_HEX_ENCRYPTION_KEY
API_KEY_ENCRYPTION_KEY=REPLACE_WITH_64_CHARACTER_HEX_API_ENCRYPTION_KEY

# Session Security
SESSION_SECRET=REPLACE_WITH_64_CHARACTER_HEX_SESSION_SECRET
CSRF_SECRET=REPLACE_WITH_64_CHARACTER_HEX_CSRF_SECRET

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem
SSL_ENABLED=false
HTTPS_REDIRECT=false

# ======================================================================
# PERFORMANCE TUNING
# ======================================================================
# Python Performance
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Worker Configuration
MCP_WORKERS=1
MCP_RATE_LIMIT=30

# ======================================================================
# ADDITIONAL SECURITY CONFIGURATIONS
# ======================================================================
# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true

# CORS Settings
CORS_ORIGINS=https://your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=*

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# ======================================================================
# DEVELOPMENT SETTINGS (DISABLE IN PRODUCTION)
# ======================================================================
# WARNING: Set these to false in production
DEBUG=false
DEVELOPMENT_MODE=false
TESTING=false
VERBOSE_LOGGING=false

# ======================================================================
# DEPLOYMENT METADATA
# ======================================================================
DEPLOYMENT_ENV=production
DEPLOYMENT_VERSION=2.0.0
DEPLOYMENT_DATE=2025-09-21
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready