{
  "name": "mcp-crypto-trading-project",
  "version": "2.1.0",
  "type": "module",
  "description": "Production-Ready MCP Crypto Trading Analysis Server - Enterprise-grade cryptocurrency trading analysis with real-time market data, technical indicators, automated trading strategies, and comprehensive security hardening (Python-based)",
  "main": "mcp_http_server.py",
  "scripts": {
    "start": "python mcp_http_server.py",
    "dev": "python mcp_http_server.py --reload",
    "start:standalone": "python mcp_server_standalone.py",
    "start:enterprise": "python mcp_enterprise_server.py",
    "test": "python -m pytest tests/ -v",
    "test:compliance": "python test_enterprise_compliance.py",
    "test:mcp": "python validate_mcp_compliance.py",
    "test:http": "python test_http_server.py",
    "health": "python scripts/health_check.py",
    "docker:build": "docker build -f Dockerfile -t mcp-crypto-trading:2.1.0 .",
    "docker:run": "docker-compose -f docker-compose.production.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f mcp-crypto-server"
  },
  "keywords": [
    "mcp",
    "crypto",
    "trading",
    "analysis",
    "bitcoin",
    "ethereum",
    "technical-analysis",
    "automated-trading",
    "machine-learning",
    "real-time",
    "api",
    "server",
    "enterprise",
    "production-ready"
  ],
  "author": {
    "name": "Kaayaan AI",
    "email": "contact@kaayaanai.com",
    "url": "https://github.com/kaayaanai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaayaanai/mcp-crypto-trading-project.git"
  },
  "bugs": {
    "url": "https://github.com/kaayaanai/mcp-crypto-trading-project/issues"
  },
  "homepage": "https://github.com/kaayaanai/mcp-crypto-trading-project#readme",
  "engines": {
    "python": ">=3.13.0"
  },
  "pythonDependencies": {
    "note": "Python dependencies are managed via requirements.txt",
    "core": ["fastapi", "uvicorn", "mcp", "ccxt", "pandas", "numpy"],
    "database": ["motor", "redis", "psycopg2-binary"],
    "testing": ["pytest", "pytest-asyncio", "httpx"]
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "config/",
    "scripts/",
    "database/",
    "tests/",
    "requirements.txt",
    "mcp_server_standalone.py",
    "mcp_enterprise_server.py",
    "mcp_http_server.py",
    "docker-entrypoint.sh",
    "Dockerfile",
    "docker-compose.production.yml"
  ],
  "directories": {
    "test": "./tests",
    "config": "./config",
    "database": "./database",
    "scripts": "./scripts"
  },
  "config": {
    "python_version": "3.13+",
    "mcp_protocol": "2024-11-05",
    "api_version": "v1",
    "http_port": 4008,
    "mcp_port": 8080,
    "health_check_endpoint": "/health",
    "architecture": "python-only"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/kaayaanai"
  }
}